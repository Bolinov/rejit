import os

Import('env librejit libpath')

dir_sconscript = Dir('.').srcnode().path 
path_engine = os.path.join(dir_sconscript, 'engine')

libs = [librejit]
if 'os' in env and env['os'] == 'macos':
  test_env = Environment()
  conf = Configure(test_env)
  if not conf.CheckLib('argp'):
    print 'Did not find libargp.'
    print 'Please install the OSX version available at https://github.com/fizx/libbow-osx/tree/master/argp'
    print 'This is the only extra step on OSX, and should be very easy to install.'
    Exit(1)
  test_env = conf.Finish()
  libs += ['argp']
env.Program('engine', ['engine.cc'],
    LIBS=libs, LIBPATH=libpath, CPPPATH='include')

BUILD_TARGETS.append(path_engine)
